<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlertingSystemHackaton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbarColor</item>
        <item name="colorPrimaryVariant">@color/toolbarColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayout.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
    </style>

    <style name="TextInputLayout.CustomInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">false</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@color/input_layout_border_selector</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="hintTextColor">@color/colorGrayDark_99000000</item>
    </style>

    <style name="TextInputEditText.CustomInputLayout" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/colorGrayDark_99000000</item>
    </style>

    <style name="BaseTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGrayDark_4F6367</item>
    </style>

    <style name="BaseTextViewStyle.Header1">
        <item name="android:textSize">@dimen/text_size_header1</item>
    </style>

    <style name="BaseTextViewStyle.Body1">
        <item name="android:textSize">@dimen/text_size_body1</item>
    </style>

    <style name="BaseTextViewStyle.Body2">
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>

    <style name="BaseTextViewStyle.Body3">
        <item name="android:textSize">@dimen/text_size_body3</item>
    </style>

    <style name="Theme.AlertingSystemHackaton.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AlertingSystemHackaton.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AlertingSystemHackaton.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>